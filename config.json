{
  "CLEAN_TASK": "clean",
  "CLEAN_SRC": [
    "dist/**/*",
    "docs/**/*",
    "!dist/.gitkeep",
    "!docs/.gitkeep"
  ],

  "CSS_TASK": "css",
  "CSS_SRC": [
    "src/less/sharpei.less",
    "src/less/docs.less"
  ],
  "CSS_DEST": "docs/css/",
  "CSS_ANY_SRC": "src/less/**/*.less",
  "CSS_AUTOPREFIX_OPTIONS": {
    "browsers": [
      "last 2 versions"
    ]
  },

  "HTML_TASK": "html",
  "HTML_SRC": "src/index.html",
  "HTML_DEST": "docs/",
  "HTML_ANY_SRC": "src/**/*.html",
  "HTML_INCLUDE_OPTIONS": {},
  "HTML_MIN_OPTIONS": {
    "caseSensitive": true,
    "collapseWhitespace": true,
    "removeComments": true,
    "removeScriptTypeAttributes": true,
    "removeStyleLinkTypeAttributes": true,
    "useShortDoctype": true
  },

  "IMG_TASK": "img",
  "IMG_SRC": "src/img/**/*",
  "IMG_DEST": "docs/img/",

  "DIST_TASK": "dist",
  "DIST_SRC": "docs/css/sharpei.css",
  "DIST_DEST": "dist/",

  "MISC_TASK": "misc",
  "MISC_SRC": [
    "src/robots.txt",
    "src/favicon.*",
    "src/CNAME"
  ],
  "MISC_DEST": "docs/",

  "BUILD_TASK": "build",

  "DEV_TASK": "dev",
  "DEV_OPTIONS": {
    "server": "docs/"
  }
}
